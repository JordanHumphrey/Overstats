<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Overstats.View.MainMenuScreen">
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="FastTrackButton"
                    Style="{StaticResource MainMenuButtonStyle}"
                    Command="{Binding FastTrackCommand}"
                    Text="Fast Track"/>
            <Button x:Name="SelectHeroButton"
                    Style="{StaticResource MainMenuButtonStyle}"
                    Text="Select Hero"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>